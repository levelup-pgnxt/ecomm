db.orders.aggregate([
    {   $match: { customer: "Jake, Sr." }   },
    {   $unwind: "$items"   },
    {
        $project: {
            _id: 0,
            nameClient: "$customer",
            quantityItems: {  $sum: "$items.quantity" },
            amount: {
                $sum: { $multiply: [ "$items.unitPrice", "$items.quantity" ] }
            },
            discount: { $sum: "$items.discount" }
        }
    }
]);
